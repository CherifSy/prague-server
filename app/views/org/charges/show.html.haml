.row
  .col-lg-12
    = breadcrumbs [[current_organization.name, organization_path(current_organization)],
                   ['Charges', organization_charges_path(current_organization)],
                   [@charge.stripe_id]]


.row
  .col-lg-12
    %h3
      = @charge.stripe_id
.row
  .col-lg-12
    %table.table
      %thead
        %th Name
        %th Value
      %tbody
        %tr
          %td
            Stripe ID
          %td
            = @charge.stripe_id
        %tr
          %td
            Customer
          %td
            = @charge.customer.email
        %tr
          %td
            Raw Amount
          %td
            = @charge.amount
        %tr
          %td
            Presentation Amount
          %td
            = @charge.presentation_amount
        %tr
          %td
            Currency
          %td
            = @charge.currency
        %tr
          %td
            Created At
          %td
            = @charge.created_at
        %tr
          %td
            Updated At
          %td
            = @charge.updated_at
        %tr
          %td
            External ID
          %td
            = @charge.external_id
        %tr
          %td
            External New Member
          %td
            = @charge.external_new_member
        %tr
          %td
            Card
          %td
            = @charge.card
        %tr
          %td
            Config for Charge
          %td
            = @charge.config
        %tr
          %td
            Paid
          %td
            = @charge.paid
        %tr
          %td
            Status
          %td
            = @charge.status