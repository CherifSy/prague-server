= simple_form_for([current_organization, @crm], url: organization_settings_crm_path(current_organization),
                   html: { class: "form-vertical credentials-form", role: "form", id: 'crm-form-actionkit'},
                   wrapper: :vertical_form, remote: true) do |f|
  = f.input :platform, as: :hidden, input_html: {value: 'actionkit'}
  = f.input :username, input_html: {placeholder: "Your admin username"}
  = f.input :password, input_html: {placeholder: "Your admin password"}
  = f.input :host, input_html: {placeholder: "yourorg.actionkit.com"}
  = f.input :donation_page_name, input_html: {placeholder: "Short name for donation page"}
  = f.input :default_currency, {placeholder: "USD"}
  = f.button :submit, 'Save', data: { disable_with: 'Saving...' }
