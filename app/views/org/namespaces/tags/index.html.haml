.row
  .col-lg-12
    = breadcrumbs [[current_organization.name, organization_path(current_organization)],
                   ['Charges', organization_charges_path(current_organization)],
                   ['Namespaces', organization_namespaces_path(current_organization)],
                   [@namespace.namespace]]

    = title "#{@namespace.namespace} Tags"

    %table.table
      %thead
        %th Tag
        %th Raised
        %th Charges

      - @tags.each do |tag|
        %tr
          %td= link_to(tag.name, organization_tag_path(current_organization, tag.name))
          %td= tag.total_raised
          %td= tag.total_charges_count

    = will_paginate @tags
