= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-devise'}) do |f|
  = devise_error_messages!
  %h2.form-signin-heading
    Forgot password?
  = f.hidden_field :reset_password_token
  = f.password_field :password, autofocus: true, placeholder: 'New password', autocomplete: "off", class: 'form-control first-item last-item'
  = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password', class: 'form-control first-item last-item'
  %div= f.submit "Change my password", class: 'btn btn-lg btn-primary btn-block'
  .shared-links
    = render "devise/shared/links"
