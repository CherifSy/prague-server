= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
  %h2.form-signin-heading Resend unlock instructions
  = devise_error_messages!

  = f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control first-item last-item'

  %div= f.submit "Resend unlock instructions", class: 'btn btn-lg btn-primary btn-block'
  .shared-links
    = render "devise/shared/links"
