= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-devise'}) do |f|
  = devise_error_messages!
  %h2.form-signin-heading Resend confirmation instructions
  = f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control first-item last-item'

  %div= f.submit "Resend instructions", class: 'btn btn-lg btn-primary btn-block'
  .shared-links
    = render "devise/shared/links"
