<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form col-sm-6", role: "form"}) do |f| %>

  <div class="form-group"><h2>Sign up</h2></div>

  <% if resource.errors.any? %>
    <div class='alert alert-danger alert-inline'><%= error_messages_for(resource) %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :organization_name, for: "organization_name" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, for: "organization_email" %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, for: "organization_password" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, for: "organization_password_confirmation" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>

  <div class="form-group">
    <%= render "devise/shared/links" %>
  </div>

<% end %>
